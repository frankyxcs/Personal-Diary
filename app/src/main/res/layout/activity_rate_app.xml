<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RateApp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtRate"
        android:text="How do you feel about WriteDiary?"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textSize="35dp"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:progressTint="@color/darkblue"
        android:id="@+id/ratingBar"
        android:layout_marginTop="75dp"
        android:numStars="5"
        android:stepSize="0.5"/>

    <TextView
        android:id="@+id/selectText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select 1 - 5 stars above"
        android:textAlignment="center"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If you like this app, we would greatly appreciate a 5 star rating"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_marginTop="90dp"
        android:paddingLeft="15dp"
        android:id="@+id/descriptionText"
        android:paddingRight="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thank you for your support"
        android:textAlignment="center"
        android:textSize="20dp"
        android:id="@+id/thankYouText"
        android:layout_marginTop="25dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:id="@+id/RateSubmit"
        android:text="Submit"/>

</LinearLayout>